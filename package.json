{
    "name": "root",
    "private": true,
    "scripts": {
        "build": "lerna exec --parallel -- babel --root-mode upward src -d lib --ignore **/*.story.js,**/*.spec.js",
        "bootstrap": "npx lerna bootstrap --use-workspaces",
        "build-storybook": "build-storybook",
        "dev": "start-storybook -p 5555",
        "lint:js": "eslint . --ext .js --ignore-pattern lib --ignore-pattern node_modules",
        "lint:styles": "stylelint './packages/**/*.js'",
        "lint": "yarn lint:js && yarn lint:styles",
        "test": "jest --passWithNoTests",
        "publish-packages": "yarn build && npx lerna publish"
    },
    "devDependencies": {
        "@babel/cli": "^7.8.4",
        "@babel/core": "^7.9.0",
        "@babel/plugin-transform-runtime": "^7.9.0",
        "@babel/preset-env": "^7.9.5",
        "@babel/preset-react": "^7.9.4",
        "@storybook/addon-storysource": "^5.3.18",
        "@storybook/react": "^5.3.18",
        "babel-core": "^6.26.3",
        "babel-jest": "^25.3.0",
        "babel-loader": "^8.1.0",
        "babel-plugin-styled-components": "^1.10.7",
        "eslint": "^6.8.0",
        "eslint-config-airbnb": "^18.1.0",
        "eslint-config-prettier": "^6.10.1",
        "eslint-plugin-babel": "^5.3.0",
        "eslint-plugin-cypress": "^2.10.3",
        "eslint-plugin-import": "^2.20.2",
        "eslint-plugin-jest": "^23.8.2",
        "eslint-plugin-jsx-a11y": "^6.2.3",
        "eslint-plugin-prettier": "^3.1.3",
        "eslint-plugin-react": "^7.19.0",
        "eslint-plugin-react-hooks": "^3.0.0",
        "husky": "^4.2.5",
        "jest": "^25.3.0",
        "jest-haste-map": "^25.3.0",
        "jest-resolve": "^25.3.0",
        "jest-styled-components": "^7.0.2",
        "lerna": "^3.20.2",
        "prettier": "^2.0.4",
        "pretty-quick": "^2.0.1",
        "react-json-view": "^1.19.1",
        "react-test-renderer": "^16.13.1",
        "stylelint": "^13.3.2",
        "stylelint-config-standard": "^20.0.0",
        "stylelint-config-styled-components": "^0.1.1",
        "stylelint-processor-styled-components": "^1.10.0",
        "webpack": "^4.42.1"
    },
    "workspaces": [
        "packages/*"
    ],
    "dependencies": {
        "firebase": "^7.14.1",
        "react": "^16.13.1",
        "react-dom": "^16.13.1",
        "react-intl": "^4.4.0",
        "react-rainbow-components": "^1.14.1",
        "react-redux": "^7.2.0",
        "redux": "^4.0.5",
        "redux-form": "^8.3.5",
        "redux-thunk": "^2.3.0",
        "styled-components": "^4.3.2"
    },
    "husky": {
        "hooks": {
            "pre-commit": "pretty-quick --staged",
            "pre-push": "yarn lint && yarn test"
        }
    }
}

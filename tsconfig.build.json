{
    "compilerOptions": {
        "module": "CommonJS",
        "target": "es5",
        "declaration": true,
        "sourceMap": true,
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "node",
        "isolatedModules": true,
        "jsx": "react",
        "skipLibCheck": true
    },
    "exclude": ["node_modules", "lib", "**/__tests__/**/*", "**/__test__/**/*"]
}
